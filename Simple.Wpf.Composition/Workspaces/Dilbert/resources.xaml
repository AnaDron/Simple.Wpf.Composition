<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:vm="clr-namespace:Simple.Wpf.Composition.Workspaces.Example2">

    <DataTemplate x:Key="ExampleViewTemplate">

        <Grid d:DataContext="{d:DesignInstance vm:ExampleViewModel}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            
            <Border Background="DarkOrange"
                    VerticalAlignment="Stretch">
                <TextBlock Text="This is example 2 workspace"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"
                           FontSize="16"
                           FontStyle="Italic" />
            </Border>
            
        </Grid>
        
    </DataTemplate>
    
</ResourceDictionary>